<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_order_option"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alec.positive_eating.OrderOption">

    <TextView
        android:id="@+id/option_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/option_instr"
        android:textStyle="bold"
        android:textSize="24dp"/>

    <EditText
        android:id="@+id/option_input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/option_title"
        android:gravity="top|left"
        android:hint=" "
        android:inputType="textMultiLine"
        android:lines="10"
        android:maxLines="20"
        android:minLines="10"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/option_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Submit" />
</RelativeLayout>
